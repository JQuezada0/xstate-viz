{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "check-types": {
            "inputs": ["./src/**", "!**/node_modules"],
            "outputs": ["./build/**"],
            "cache": true,
            "dependsOn": ["^check-types"]
        },
        "build-js": {
            "inputs": ["./src/**", "!**/node_modules"],
            "outputs": ["./build/**"],
            "cache": true,
            "dependsOn": ["^build-js"]
        },
        "clean": {
            "cache": false,
            "dependsOn": ["^clean"]
        }
    }
}